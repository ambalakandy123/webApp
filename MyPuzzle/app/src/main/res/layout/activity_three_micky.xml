<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".threeMickyActivity">

    <Button
        android:id="@+id/btnmi0"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:background="@drawable/mic0"
        android:onClick="on_click_image"
        app:layout_constraintEnd_toStartOf="@+id/btnmi1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnmi1" />

    <Button
        android:id="@+id/btnmi1"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:background="@drawable/mic1"
        android:onClick="on_click_image"
        app:layout_constraintEnd_toStartOf="@+id/btnmi2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnmi0"
        app:layout_constraintTop_toTopOf="@+id/btnmi2" />

    <Button
        android:id="@+id/btnmi2"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/mic2"
        android:onClick="on_click_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnmi1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnmi3"
        android:layout_width="70dp"
