<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#372e77"
    tools:context=".threebyimageActivity">

    <Button
        android:id="@+id/btnimg0"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/k"
        android:onClick="mik"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnimg1"
        app:layout_constraintEnd_toEndOf="@+id/btnimg1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnimg1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnimg1"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/k"
        android:onClick="donald"
        app:layout_constraintBottom_toTopOf="@+id/btnimg2"
        app:layout_constraintEnd_toEndOf="@+id/btnimg2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnimg2"
        app:layout_constraintTop_toBottomOf="@+id/btnimg0" />

    <Button
        android:id="@+id/btnimg2"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:onClick="pop"
        android:background="@drawable/k"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnimg1" />
    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="476dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>